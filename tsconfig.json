{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "rxjs": [
        "../../node_modules/rxjs"
      ],
      "rxjs/*": [
        "../../node_modules/rxjs/*"
      ],
    },
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist"
  ],
}